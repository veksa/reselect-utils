{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2020"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
